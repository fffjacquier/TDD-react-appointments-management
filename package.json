    "babel-loader": "^8.1.0",
    "expect-redux": "^5.0.3",
    "express-graphql": "^0.9.0",
    "faker": "^4.1.0",
    "jest": "^26.0.1",
    "jest-raw-loader": "^1.0.1",
    "react-test-renderer": "^16.13.1",
    "supertest": "^4.0.2",
    "webpack": "^4.43.0",
